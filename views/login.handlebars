
<main>

    <div class="login-form">
        <form id="login-form">
            <h2>Login</h2>
            <label>Email:</label>
            <input type="email" name="username" id="email-login">
            <label>Password:</label>
            <input type="password" name="password" id="password-login">
            <button type="submit" id="login-button">Login</button>
        </form>
    </div>
    <div class="signup-form">
        <form id="signup-form">
            <h2>Signup</h2>
            <label>Name:</label>
            <input type="text" name="username" id="name-signup">
            <label>Email:</label>
            <input type="email" name="username" id="email-signup">
            <label>Password:</label>
            <input type="password" name="password" id="password-signup">
            <button type="submit" id="signup-button">Signup!</button>
        </form>
    </div>
</main>
<script src="/js/login.js"></script>



   

     